PREFIX api: <https://cube-creator.zazuko.com/vocab#>
PREFIX hydra: <http://www.w3.org/ns/hydra/core#>
PREFIX cc: <https://cube-creator.zazuko.com/vocab#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX dcterms: <http://purl.org/dc/terms/>
PREFIX schema: <http://schema.org/>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>

ENTRYPOINT "cube-project/ubd/csv-mapping/table-observation"

HEADERS {
  x-user "john-doe"
  x-permission "pipelines:write"
}

With Class api:Table {
    Expect Operation cc:CreateLiteralColumnMappingAction {
        Invoke {
            Content-Type "text/turtle"

            ```
            prefix cc: <https://cube-creator.zazuko.com/vocab#>
            prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>

            <>  a cc:LiteralColumnMapping ;
                cc:sourceColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/year> ;
                cc:targetProperty "dimension/year-built" ;
                cc:datatype xsd:date ;
                cc:language "en" ;
                cc:defaultValue "2000-01-01" .
            ```
        } => {
            Expect Status 201

            Expect Type <https://cube-creator.zazuko.com/vocab#ColumnMapping>
            Expect Type <https://cube-creator.zazuko.com/vocab#LiteralColumnMapping>
            Expect Property cc:targetProperty "dimension/year-built"
            Expect Property cc:sourceColumn {
                Expect Id <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/year>
            }
            Expect Property cc:datatype {
                Expect Id xsd:date
            }
            Expect Property cc:language "en"
            Expect Property cc:defaultValue "2000-01-01"
        }

        Invoke {
            Content-Type "text/turtle"

            ```
            prefix cc: <https://cube-creator.zazuko.com/vocab#>
            prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>

            <>  a cc:LiteralColumnMapping ;
                cc:sourceColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/year> ;
                cc:targetProperty "dimension/year-built" ;
                cc:datatype xsd:date ;
                cc:language "en" ;
                cc:defaultValue "2000-01-01" .
            ```
        } => {
            Expect Status 400
        }
    }

    Expect Operation cc:CreateReferenceColumnMappingAction {
        Invoke {
            Content-Type "text/turtle"

            ```
            prefix cc: <https://cube-creator.zazuko.com/vocab#>
            prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>

            <>  a cc:ReferenceColumnMapping ;
                cc:targetProperty "dimension/station" ;
                cc:referencedTable <https://cube-creator.lndo.site/cube-project/ubd/csv-mapping/table-station> ;
                cc:identifierMapping [
                    cc:sourceColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/station> ;
                    cc:referencedColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/stations/column/station-id> ;
                ] .
            ```
        } => {
            Expect Status 201

            Expect Type <https://cube-creator.zazuko.com/vocab#ColumnMapping>
            Expect Type <https://cube-creator.zazuko.com/vocab#ReferenceColumnMapping>
            Expect Property cc:targetProperty "dimension/station"
            Expect Property cc:referencedTable {
                Expect Id <https://cube-creator.lndo.site/cube-project/ubd/csv-mapping/table-station>
            }
            Expect Property cc:identifierMapping {
                Expect Property cc:sourceColumn {
                    Expect Id <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/station>
                }
                Expect Property cc:referencedColumn {
                    Expect Id <https://cube-creator.lndo.site/cube-project/ubd/csv-source/stations/column/station-id>
                }
            }
        }

        Invoke {
            Content-Type "text/turtle"

            ```
            prefix cc: <https://cube-creator.zazuko.com/vocab#>
            prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#>
            prefix xsd: <http://www.w3.org/2001/XMLSchema#>

            <>  a cc:ReferenceColumnMapping ;
                cc:targetProperty "dimension/station" ;
                cc:referencedTable <https://cube-creator.lndo.site/cube-project/ubd/csv-mapping/table-station> ;
                cc:identifierMapping [
                    cc:sourceColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/ubd/column/station> ;
                    cc:referencedColumn <https://cube-creator.lndo.site/cube-project/ubd/csv-source/stations/column/station-id> ;
                ] .
            ```
        } => {
            Expect Status 400
        }
    }
}
