BASE           <urn:hydra-box:api>
PREFIX cc:     <https://cube-creator.zazuko.com/vocab#>
prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix code:   <https://code.described.at/>
prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#subClassOf>
prefix schema: <http://schema.org/>
prefix query:  <http://hypermedia.app/query#>
prefix sh:     <http://www.w3.org/ns/shacl#>

cc:Job
  a
    hydra:Class ;
  rdfs:subClassOf
    schema:Action ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:UpdateAction ;
      hydra:title
        "Update job" ;
      hydra:method
        "PATCH" ;
      hydra:expects
        <shape/job/update> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/jobs#patch> ;
        ] ;
    ] .

cc:TransformJob
  a hydra:Class .

cc:PublishJob
  a hydra:Class .

cc:JobCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        cc:TransformAction ;
      hydra:title
        "Start transformation" ;
      hydra:description
        "Apply CSV mapping to generate cube data out of CSV files" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:TransformJob ,
        <shape/job/trigger> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/jobs#transform> ;
        ] ;
    ],
    [
      a
        hydra:Operation,
        cc:PublishAction ;
      hydra:title
        "Start publication" ;
      hydra:description
        "Publish current version of the cube to public database" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:PublishJob ,
        <shape/job/trigger> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/jobs#publish> ;
        ] ;
    ]
.

<shape/job/trigger>
  a
    sh:Shape .
