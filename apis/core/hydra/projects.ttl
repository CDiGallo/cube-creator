BASE            <urn:hydra-box:api>
PREFIX cc:      <https://cube-creator.zazuko.com/vocab#>
prefix hydra:   <http://www.w3.org/ns/hydra/core#>
prefix code:    <https://code.described.at/>
prefix query:   <http://hypermedia.app/query#>
prefix sh:      <http://www.w3.org/ns/shacl#>
prefix schema:  <http://schema.org/>

cc:CubeProject
  a
    hydra:Class ;
  query:include
    cc:csvMapping ;
  hydra:supportedOperation
  [
    a 
      hydra:Operation, 
      schema:DeleteAction ;
      hydra:title 
        "Delete Project" ;
      hydra:method
        "DELETE" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#remove> ;
        ] ;
  ] .

cc:ProjectsCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        cc:CreateProjectAction ;
      hydra:title
        "New project" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:CubeProject,
        <shape/cube-project/create> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#post> ;
        ] ;
    ] .

<shape/cube-project/create> a sh:Shape .
