BASE           <urn:hydra-box:api>
PREFIX cc:     <https://cube-creator.zazuko.com/vocab#>
prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix code:   <https://code.described.at/>
prefix query:  <http://hypermedia.app/query#>
prefix sh:     <http://www.w3.org/ns/shacl#>
PREFIX schema: <http://schema.org/>
prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#>

cc:CubeProject
  a
    hydra:Class ;
  query:include
    cc:csvMapping,
    schema:maintainer ;
  hydra:supportedProperty
    [ hydra:property
        cc:dataset ],
    [ hydra:property
          cc:csvMapping ] ,
    [ hydra:property
          cc:export ] ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:UpdateAction ;
      hydra:title
        "Edit Project" ;
      hydra:method
        "PUT" ;
      hydra:expects
        cc:CubeProject,
        <shape/cube-project/update> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#put> ;
        ] ;
    ] ,
    [
      a
        hydra:Operation,
        schema:DeleteAction ;
      hydra:title
        "Delete Project" ;
      hydra:method
        "DELETE" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#remove> ;
        ] ;
    ] ;
  hydra:supportedProperty
    [
      a
        hydra:SupportedProperty ;
      hydra:property
        cc:cubeGraph ;
    ] ;
.

cc:csvMapping
  a
    hydra:Link .

cc:dataset
  a
    hydra:Link .

cc:ProjectsCollection
  a
    hydra:Class ;
  hydra:supportedOperation
    [
      a
        hydra:Operation,
        schema:CreateAction ;
      hydra:title
        "New project" ;
      hydra:method
        "POST" ;
      hydra:expects
        cc:CubeProject,
        <shape/cube-project/create> ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-projects#post> ;
        ] ;
    ] .

<shape/cube-project/create>
  a
    sh:Shape .

<shape/cube-project/update>
  a
    sh:Shape .

cc:cubeGraph
  a
    rdf:Property,
    hydra:Link ;
  hydra:supportedOperation
    [
      a
        hydra:Operation ;
      hydra:title
        "Describe a resource inside the cube data" ;
      hydra:method
        "GET" ;
      code:implementedBy
        [
          a
            code:EcmaScript ;
          code:link
            <file:handlers/cube-data#get> ;
        ] ;
    ] ;
.


cc:export
  a rdf:Property, hydra:Link ;
  hydra:supportedOperation
    [
      a hydra:Operation ;
      hydra:title "Export project" ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/cube-projects#getExport> ;
        ] ;
    ] ;
.
