BASE           <urn:hydra-box:api>
PREFIX cc:     <https://cube-creator.zazuko.com/vocab#>
prefix hydra:  <http://www.w3.org/ns/hydra/core#>
prefix sh:     <http://www.w3.org/ns/shacl#>
prefix schema: <http://schema.org/>
prefix code:   <https://code.described.at/>

cc:DimensionMetadataCollection
  a
    hydra:Class ;
  hydra:supportedProperty
    [ hydra:property
        schema:hasPart ] ;
.

schema:hasPart
  hydra:supportedOperation
    _:DimensionUpdateOperation ,
    _:DimensionGetOperation .

_:DimensionGetOperation
  a
    hydra:Operation;
  hydra:method "GET" ;
  code:implementedBy
    [
      a
        code:EcmaScript ;
      code:link
        <file:handlers/dimension#get> ;
    ] ;
.

_:DimensionUpdateOperation
  a
    hydra:Operation,
    schema:UpdateAction ;
  hydra:title
    "Edit dimension metadata" ;
  hydra:method
    "PUT" ;
  hydra:expects
    <shape/dimension/metadata> ;
  code:implementedBy
    [
      a
        code:EcmaScript ;
      code:link
        <file:handlers/dimension#put> ;
    ] ;
.

<shape/dimension/metadata>
  a
    sh:Shape .
