BASE <urn:hydra-box:api>
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix hydra: <http://www.w3.org/ns/hydra/core#> .
@prefix code: <https://code.described.at/> .
@prefix hydra-box: <http://hydra-box.org/schema/> .

<api>
  a hydra:ApiDocumentation ;
.

<api#ManagedDimensions>
  a hydra:Class ;
  rdfs:subClassOf hydra:Collection ;
  hydra:supportedOperation
    [
      a hydra:Operation ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/managed-dimensions#get> ;
        ] ;
    ]
.

<api#ManagedDimensionTerms>
  a hydra:Class ;
  rdfs:subClassOf hydra:Collection ;
  hydra:supportedOperation
    [
      a hydra:SupportedOperation ;
      hydra:method "GET" ;
      code:implementedBy
        [
          a code:EcmaScript ;
          code:link <file:handlers/managed-dimensions#getTerms> ;
        ] ;
      hydra-box:variables
        [
          a hydra:IriTemplate ;
          hydra:template "/terms{?dimension}" ;
          hydra:variableRepresentation hydra:ExplicitRepresentation ;
          hydra:mapping
            [
              a hydra:IriTemplateMapping ;
              hydra:property schema:inDefinedTermSet ;
              hydra:required true ;
              hydra:variable "dimension" ;
            ]
        ] ;
    ] .
