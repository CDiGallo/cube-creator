{
  "compilerOptions": {
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "packages",
    "apis",
    "ui"
  ],
  "exclude": [
    "node_modules"
  ]
}
